@model List<UserItemVM>
@{
  ViewData["Title"] = "Basic Tables - Tables";
}

@* ************** Content ************** *@
<!-- Basic Bootstrap Table -->
<div class="card">
  <h5 class="card-header">Користувачі</h5>
  <div class="table-responsive text-nowrap">
    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Фото</th>
          <th>ПІБ</th>
          <th>Email</th>
          <th>Роль</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
                @foreach (var user in Model)
                {
                    <tr>
                        <td><span>@user.Id</span></td>
                        <td>
                            <div class="avatar avatar-lg pull-up">
                                <img src="@user.Image" alt="@user.FullName" class="rounded-circle">
                            </div>
                        </td>
                        <td>
                            @user.FullName
                        </td>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span>@role </span>
                            }
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="ri-more-2-line"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="ri-pencil-line me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="ri-delete-bin-6-line me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
      </tbody>
    </table>
  </div>
</div>
<!--/ Basic Bootstrap Table -->
