@model List<ProductItemModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1 class="text-center mt-4">Продукти</h1>

<a href="@Url.Action("Create")" class="btn btn-success">Додати</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Категорія</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @item.Id
                </th>
                <td>
                    @* <img src="@item.Image" alt="" width="75" /> *@
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    <a href="@Url.Action("Update", new { id = item.Id })" class="btn btn-success">Змінити</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        }

    </tbody>
</table>

